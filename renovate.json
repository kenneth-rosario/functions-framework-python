{
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "examples/**",
    "test/**"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "direct"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "automerge": false,
      "depTypeList": [
        "python"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major updates",
      "labels": [
        "major"
      ]
    },
    {
      "matchDepTypes": [
        "direct"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "automerge": false,
      "depTypeList": [
        "python"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch"
      ],
      "groupName": "minor updates",
      "group": true,
      "labels": [
        "minor"
      ]
    }
  ]
}
