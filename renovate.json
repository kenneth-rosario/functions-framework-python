{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "direct"
      ],
      "excludePaths": [
        "examples/**",
        "test/**"
      ],
      "packagePatterns": [
        "*"
      ],
      "automerge": false,
      "depTypeList": [
        "python"
      ],
      "major": {
        "groupName": "major updates",
        "labels": [
          "major"
        ]
      },
      "minor": {
        "groupName": "minor updates",
        "group": true,
        "labels": [
          "minor"
        ]
      }
    }
  ]
}
